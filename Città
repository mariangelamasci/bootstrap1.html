{ 
ctta= parseInt(window.prompt('ilserisci la città'));
if (citta > 1000000)
{
conta_ma++;
}
eslse (abitanti < 1000000)
{
conta_mi++
}
}

document.write("gli abitanti della città non superano i 1000000 abitanti", conta_mi++, "<br>");
